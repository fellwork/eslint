{
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): publish %s",
      "ignoreChanges": ["**/*.md"],
      "noPrivate": true,
      "yes": true
    }
  }
}
