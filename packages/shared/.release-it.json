{
  "git": {
    "tagName": "shared@${version}",
    "commitMessage": "Release ${tagName}",
    "tagAnnotation": "Release ${tagName}"
  },
  "npm": {
    "publishArgs": ["--access", "public"]
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    }
  }
}
