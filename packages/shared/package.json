{
  "name": "@fellwork/eslint-shared",
  "version": "0.1.0",
  "description": "Shared configuration for ESLint",
  "keywords": [
    "eslint",
    "config",
    "shared"
  ],
  "homepage": "https://github.com/fellwork/eslint#readme",
  "bugs": {
    "url": "https://github.com/fellwork/eslint/issues",
    "email": "Fellwork <shane@fellwork.com>"
  },
  "license": "MIT",
  "author": "Fellwork <shane@fellwork.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fellwork/eslint.git",
    "directory": "packages/shared"
  },
  "main": "lib/index.cjs",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "*.md"
  ],
  "scripts": {
    "build": "unbuild",
    "docs": "typedoc",
    "preinstall": "npx only-allow pnpm",
    "watch": "unbuild --stub"
  },
  "peerDependencies": {
    "eslint": ">=7.4.0",
    "typescript": "^4"
  },
  "dependencies": {
    "editorconfig": "^0.15.3"
  },
  "devDependencies": {
    "eslint": "^8.15.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "unbuild": {
    "clean": true,
    "declaration": true,
    "entries": ["src/index"],
    "outDir": "lib",
    "rollup": {
      "emitCJS": true
    }
  }
}
