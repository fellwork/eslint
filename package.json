{
  "name": "fellwork-eslint-root",
  "private": true,
  "packageManager": "pnpm@7.0.0-rc.3",
  "description": "Fellwork ESLint monorepo",
  "keywords": [
    "eslint",
    "config",
    "format",
    "style"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fellwork/eslint.git"
  },
  "scripts": {
    "build": "pnpm -r build",
    "format": "prettier -w .",
    "postinstall": "husky install",
    "lint": "pnpm lint:files .",
    "lint:files": "pnpm eslint --cache --max-warnings 0"
  },
  "bugs": {
    "url": "https://github.com/fellwork/eslint/issues"
  },
  "homepage": "https://github.com/fellwork/eslint#readme",
  "devDependencies": {
    "@antfu/eslint-config": "^0.20.2",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/config-lerna-scopes": "^16.2.2",
    "@rushstack/eslint-patch": "^1.1.2",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "rollup": "^2.70.1",
    "typescript": "^4.6.3",
    "vitest": "^0.9.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "lint-staged": {
    "packages/**/*.[jt]s?(x)": [
      "pnpm lint:files"
    ]
  },
  "engines": {
    "pnpm": ">=7.0.0-rc.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
